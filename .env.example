# Example environment variables for service-marketplace
# Copy to .env and fill in your values

# Application
APP_NAME=service-marketplace
APP_ENV=development
APP_PORT=8009

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=kilang_batik
DB_SSLMODE=disable

# NATS
NATS_URL=nats://localhost:4222

# JWT
JWT_SECRET=your-jwt-secret-key

# Shopee Open Platform
SHOPEE_PARTNER_ID=
SHOPEE_PARTNER_KEY=
SHOPEE_REDIRECT_URL=http://localhost:3001/marketplace/callback/shopee
SHOPEE_SANDBOX=true

# TikTok Shop Partner API
TIKTOK_APP_KEY=
TIKTOK_APP_SECRET=
TIKTOK_REDIRECT_URL=http://localhost:3001/marketplace/callback/tiktok

# Security - Token Encryption (32-byte key for AES-256)
MARKETPLACE_ENCRYPTION_KEY=

# Internal Services
SERVICE_CATALOG_URL=http://localhost:8082
SERVICE_INVENTORY_URL=http://localhost:8083
SERVICE_ORDER_URL=http://localhost:8005

# Sentry (optional)
SENTRY_DSN=

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
